{% extends 'layouts/base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	<div class="p-5">

		<div class="row g-5">
			<div class="col-md-8 brown rad-20 p-5 bord-light">
				<h3 class="pb-4 mb-4  border-bottom bold-brown">
					Les dernières annonces
				</h3>

				{{ include('partials/nav_results.html.twig')}}

				{% for annonce in annonces %}
					{% set status =  annonce.animal.isLost == 1 ? 'perdu' : 'trouvé' %}
					{% set date =  annonce.animal.isLost == 1 ? annonce.lostAt : annonce.foundAt %}
					<div class="p-3 bord-light rad-20 bg-white mb-2">
						<div class="row">
							<div class="col-lg-4 col-md-12 col-sm-6 mx-0 text-center my-auto">
								<img class="image_card" src="{{ annonce.image }}" alt="" width="120" height="100">
							</div>

							<div class="col-lg-4 col-md-12 col-sm-6 text-center py-3">
								<p>
									<span class="text-green">{{ annonce.animal.type | capitalize ~ ' ' ~ status}}</span><br>
									<span class="slim-brown" style="font-size:14px">{{ status | capitalize }}
										le :
										{{ date | date('d/m/Y')}}
									</span><br>
									<span class="slim-brown">Lieu :
										<small>{{ annonce.user.city }}</small>
									</span><br>
									<span class="slim-brown">Sexe :
										{{ annonce.animal.gender }}
									</span><br>
								</p>
							</div>

							<div class="col-lg-4 col-md-12 col-sm-12 my-auto text-center mx-0 pb-3">
								<div class="my-auto button_link_card">
									<a href="#" class="link_card text-green rad-20">Voir l'annonce</a><br>
								</div>
							</div>
						</div>
					</div>
				{% endfor %}

				<nav aria-label="Page navigation example">
					<ul class="pagination justify-content-center">
						<li class="page-item  {{ page == 1 ? ' disabled' : '' }} ">
							<a class="page-link bold-brown" href="#" tabindex="-1">Previous</a>
						</li>
						{% for item in 1..((total / limit) | round(0, 'ceil')) %}
							<li class="page-item ">
								<a class="page-link slim-brown {{ page == item ? ' text-success' : '' }}" href="?page={{ item }}">{{ item }}</a>
							</li>
						{% endfor %}
						<li class="page-item  {{ page == (total / limit) | round(0, 'ceil') ? ' disabled' : '' }}">
							<a class="page-link bold-brown" href="#">Next</a>
						</li>
					</ul>
				</nav>
				{{ include('partials/nav_results.html.twig')}}
			</div>

			<!-- start right col -->
			<div class="col-md-4">
				<div class="position-sticky" style="top: 2rem;">

					<div class="w-100" style="padding: 0 20px; background-color:#4287f5; color:white; border-radius:20px;position:relative;z-index:10;">
						<h5 class="py-1 px-auto fst-italic">
							<span class="text-white">
								<i class="fab fa-facebook-square"></i>
							</span>
							Nos animaux sur facebook</h5>
					</div>
					<div class="p-4 mb-3 bord-light bg-white" style="margin-top:-8px;border-radius:20px;margin-top:-40px;">
						<p class="mb-0 mt-5 bold-brown">Aidez nous à retrouver nos animaux perdus</p>
					</div>

					<div class="w-100" style="padding: 0 20px; background-color:#a67256; color:white; border-radius:20px;position:relative;z-index:10;">
						<h5 class="py-1 px-auto fst-italic">
							<span class="text-white">
								<i class="fas fa-paw"></i>
							</span>
