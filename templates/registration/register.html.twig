{% extends 'layouts/base2.html.twig' %}

{% block title %}Inscription
{% endblock %}


{% block body %}
	<div class="container mt-3">
		<div class="row">
			<div class="col-lg-6 col-md-6 mx-auto pt-5">

				{{ form_start(registrationForm) }}

				<div class="row">
					<div class="d-flex justify-content-between">
						<h3 class="h3 mb-3 font-weight-normal">Inscription</h3>
						<a href="{{ path('app_home') }}" class="text-dark">
							<i class="fas fa-home"></i>
						</a>
					</div>
					<div class="col-md-6 mt-3">
						<div class="mb-3">
							{{ form_row(registrationForm.firstname) }}
						</div>
					</div>
					<div class="col-md-6 mt-3">
						<div class="mb-3">
							{{ form_row(registrationForm.lastname) }}
						</div>
					</div>
				</div>
				<div class="row">
					<div class="col-md-5">
						<div class="mb-3">
							{{ form_row(registrationForm.city) }}
						</div>
					</div>
					<div class="col-md-7">
						<div class="mb-3">
							{{ form_row(registrationForm.avatar) }}
						</div>
					</div>
				</div>
				<div class="mb-3">
					{{ form_row(registrationForm.phone) }}
				</div>
				<div class="mb-3">
					{{ form_row(registrationForm.email) }}
				</div>
				<div class="mb-3">
					{{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}
					{{ form_row(registrationForm.agreeTerms) }}
				</div>
				{{ form_row(registrationForm.submit) }}

				{{ form_end(registrationForm) }}
				<small>J'ai d√©ja un compte,
					<a href="{{ path('app_login') }}">Je me connecte</a>
				</small>
			</div>
		</div>
	</div>
{% endblock %}
