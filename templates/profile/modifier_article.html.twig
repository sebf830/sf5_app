{% extends 'layouts/base.html.twig' %}

{% block title %}Profile
{% endblock %}

{% block body %}

	<div class="container p-5">
		<div class="p-2 border bg-white rad-20 mx-5">
			<div class="row">
				<div class="col-md-10 p-5 mx-auto">
					<div class="d-flex justify-content-between">
						<h5 class="h3 mb-3 font-weight-normal">Modifier un article</h5>
						<a href="{{ path('app_profile') }}" class="text-dark">
							<i class="fas fa-home"></i>
						</a>
					</div>
					{{ form_start(form)}}
					<div class="mb-3">
						{{ form_row(form.title)}}
					</div>
					<div class="mb-3">
						{{ form_row(form.content)}}
					</div>
					<div class="mb-3">
						{{ form_row(form.category)}}
					</div>
					<div class="row">
						<div class="col mb-3 mt-2">
							{% if article.images[0]%}
								{% if article.images[0].name starts with 'https' %}
									<img src="{{ article.images[0] }}" alt="" width="120" height="120">
								{% else %}
									<img src="{{ asset('uploads/' ~ article.images[0])}}" alt="" width="150" height="150">
								{% endif %}
							{% else %}
								<img src="{{ asset('uploads/default_animal.png') }}" alt="" width="120" height="120">
							{% endif %}
						</div>
						<div class="col mb-3">
							{{ form_row(form.image)}}
						</div>
					</div>
					<div class="mt-4">
						{{ form_row(form.submit)}}
					</div>
					{{ form_end(form)}}
				</div>
			</div>
		</div>
	</div>

	<div class="row gx-2"></div>
{% endblock %}
{% block javascript_custom %}
	<script>
		document.querySelector('#sub_header').style.display = 'none';
	</script>
{% endblock %}
